{
  "name": "quickair-chat-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:widget": "npm run dev --workspace=packages/chat-widget",
    "dev:server": "npm run dev --workspace=packages/chat-server",
    "dev": "concurrently \"npm run dev:widget\" \"npm run dev:server\"",
    "build:widget": "npm run build --workspace=packages/chat-widget",
    "build:server": "npm run build --workspace=packages/chat-server",
    "build": "npm run build:widget && npm run build:server",
    "start:server": "npm run start --workspace=packages/chat-server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
